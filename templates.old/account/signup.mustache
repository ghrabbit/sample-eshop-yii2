{{> signup/header }}

<div class="form-">
<form class="form-horizontal" role="form" name="{{formName}}" method="post" action="">
  {{> form/header}}
  <div class="form-group">
    <label for="inputUserName" class="col-sm-3 control-label">{{labels.username}} <span class="required">*</span></label>
    <div class="col-sm-5">
      <input type="text" class="form-control" name="username" id="inputUserName" placeholder="username" value="{{values.username}}">
    </div>
  </div>
  
  <div class="form-group">
    <label for="inputPassword" class="col-sm-3 control-label">{{labels.password}} <span class="required">*</span></label>
    <div class="col-sm-5">
      <input type="text" class="form-control" name="password" id="inputPassword" placeholder="password" size=60 maxlength=32>
    </div>
  </div>

  <div class="form-group">
    <label for="inputEmail" class="col-sm-3 control-label">{{labels.email}} <span class="required">*</span></label>
    <div class="col-sm-5">
      <input type="email" class="form-control" name="email" id="inputEmail" placeholder="email" value="{{values.email}}">
    </div>
  </div>
  
  <div class="form-group">
    <label for="inputFirstName" class="col-sm-3 control-label">{{labels.firstname}} <span class="required">*</span></label>
    <div class="col-sm-5">
      <input type="text" class="form-control" name="firstname" id="inputFirstName" placeholder="firstName" size=60 maxlength=128 value="{{values.firstname}}">
    </div>
  </div>
  
  <div class="form-group">
    <label for="inputLastName" class="col-sm-3 control-label">{{labels.lastname}} <span class="required">*</span></label>
    <div class="col-sm-5">
      <input type="text" class="form-control" name="lastname" id="inputLastName" placeholder="lastName" size=60 maxlength=128 value="{{values.lastname}}">
    </div>
  </div>
  
    <div class="form-group">
    <label for="inputPhone" class="col-sm-3 control-label">{{labels.phone}} <span class="required">*</span></label>
    <div class="col-sm-5">
      <input type="text" class="form-control" name="phone" id="inputPhone" placeholder="phone" size=20 maxlength=11 value="{{values.phone}}">
    </div>
  </div>
  
    <div class="form-group">
    <label for="inputAddress" class="col-sm-3 control-label">{{labels.address}} <span class="required">*</span></label>
    <div class="col-sm-9">
      <textarea class="form-control" name="address" id="inputAddress" placeholder="Address" rows="6" cols="50">{{values.address}}</textarea>
	</div>
  </div>
  
  <div class="form-group">
    <label for="inputVerifyCode" class="col-sm-3 control-label">{{labels.verifyCode}} <span class="required">*</span></label>
    <div class="col-sm-9">
		{{> _captcha }}
		<input type="text" class="form-control" name="verifyCode" id="inputVerifyCode" placeholder="verify Code" value="{{values.verifyCode}}">
		<div class="hint help-block">{{{labels.captchaHelp}}}</div> 
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-9">
      <button type="submit" class="btn btn-default">{{labels.submit}}</button>
	</div>
  </div>
</form>
</div><!-- form -->

