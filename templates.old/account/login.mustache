{{> login/header }}

<div class="form-">
<form class="form-horizontal" role="form" method="post" action="{{action}}" id="{{form_id}}" name="{{formName}}">
  {{> form/header}}
  <div class="form-group">
    <label for="inputUserName" class="col-sm-3 control-label">{{labels.username}} <span class="required">*</span></label>
    <div class="col-sm-9">
      <input type="text" class="form-control" name="username" id="inputUserName" placeholder="username" value="{{model.username}}">
    </div>
  </div>
  <div class="form-group">
    <label for="inputPassword" class="col-sm-3 control-label">{{labels.password}} <span class="required">*</span></label>
    <div class="col-sm-9">
      <input type="password" class="form-control" name="password" id="inputPassword" placeholder="password" value="{{model.password}}">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-9">
      <div class="checkbox">
        <label>
          <input type="checkbox" name="rememberMe" {{#model.rememberMe}}checked=""{{/model.rememberMe}}>{{labels.rememberMe}}</input>
        </label>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-9">
      <button type="submit" class="btn btn-default" name="sign-in">{{labels.submit}}</button>
	</div>
  </div>
</form>
</div><!-- form -->

