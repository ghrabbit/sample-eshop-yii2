<form id="wizzard-form" class="form-horizontal" action="" method="post">
<input type="hidden" name="step" value="{{step}}">	
<input type="hidden" name="dostep">
<div class="wizzard-step1 hidden">	
	<h3><span class="label label-info">{{labels.step1}}</span></h3>
	<div class="form-group">
		<label class="col-lg-2 control-label" for="customer">{{labels.customer}}</label>
		<div class="col-lg-5">
			<input type="text" class="form-control" name="customer" value="{{model.customer}}">
		</div>
	</div>
	<div class="form-group">
		<label class="col-lg-2 control-label" for="contact">{{labels.contact}}</label>
		<div class="col-lg-5">
			<input type="text" class="form-control" name="contact" value="{{model.contact}}">
		</div>
	</div>
	<div class="form-group">
		<label class="col-lg-2 control-label" for="address">{{labels.address}}</label>
		<div class="col-lg-5">
			<textarea class="form-control" name="address"  cols="50" rows="3">{{model.address}}</textarea>
		</div>
	</div>
</div>	
