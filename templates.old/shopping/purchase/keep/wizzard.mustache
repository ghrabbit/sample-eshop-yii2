<div class="wizzard-step2 hidden">   
	<h3><span class="label label-info">{{labels.step2}}</span></h3>
	<div class="form-group">
		<label class="col-lg-2 control-label" for="address">{{labels.comments}}</label>
		<div class="col-lg-offset-2 col-lg-5">
			<textarea class="form-control" name="comments"  rows="5">{{model.comments}}</textarea>
		</div>	
	</div>
</div>

<div class="wizzard-step3 hidden"> 
<h3><span class="label label-info">{{labels.step3}}</span></h3>

	<table class="table">
	<tbody>
	<tr><td>{{labels.date}}</td><td>{{date}}</td></tr>
	<tr><td>{{labels.total}}</td><td>{{{cart.ftotal}}}</td></tr>	
	<tr><td>{{labels.billTo}}</td><td>{{model.customer}}</td></tr>	
	<tr><td>{{labels.contact}}</td><td>{{model.contact}}</td></tr>
	<tr><td>{{labels.address}}</td><td>{{model.address}}</td></tr>
	</tbody>
	</table>

</div>
<div class="wizzard-step4 hidden">
<h3><span class="label label-info">{{labels.step4}}</span></h3>

  <div class="table-responsive-">	
	<table class="table">
	<thead>
	<tr class="success">
		<th>{{labels.product}}</th>
		<th class="text-right">{{{labels.price}}}</th>
		<th class="text-right">{{labels.qty}}</th>
		<th colspan=2 class="text-right">{{labels.total}}</th>
	</tr>
	</thead>
	<tbody>
	{{#products}}
		<tr>
			<td>{{title}}</td>
			<td align=right>{{price}}</td>
			<td align=right>{{qty}}</td>
			<td>{{{labels.valute}}}</td>
			<td align=right>{{total}}</td>
		</tr>
	{{/products}}
	
	<tr>
		<td colspan=3></td>
		<td colspan=2><hr size=1></td>
	</tr>
	<tr>
		<td colspan=3 class="text-right">{{labels.subTotal}}</td>
		<td>{{{labels.valute}}}</td>
		<td class="text-right">{{{cart.ftotal}}}</td>
	</tr>
	<tr>
		<td colspan=3></td>
		<td colspan=2><hr size=1></td>
	</tr>
	<tr class="bg-primary">
		<td colspan=3 class="text-right">{{labels.grandTotal}}</td>
		<td>{{{labels.valute}}}</td>
		<td class="text-right">{{{cart.ftotal}}}</td>
	</tr>
	</tbody>
	</table>
  </div>	

</div>
	
	<div class="form-group pull-right">
		<div class="col-lg-offset-2 col-lg-5">
		{{#wizzard-prev}}
			<button type="button" class="btn btn-default btn-wizzard" id="wizzard-prev">{{labels.prev}}</button>
		{{/wizzard-prev}}
		{{#wizzard-next}}
			<button type="button" class="btn btn-default btn-wizzard" id="wizzard-next">{{labels.next}}</button>
		{{/wizzard-next}}
		{{#wizzard-finish}}	
			<button type="button" class="btn btn-default btn-wizzard " id="wizzard-finish">{{labels.finish}}</button>
		{{/wizzard-finish}}	
		</div>
	</div>
</form>
