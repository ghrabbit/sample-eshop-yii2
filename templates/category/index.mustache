<h2><p class="top-title">{{title}}</p></h2>
{{#info}}{{{info}}}{{/info}}
<table class="table table-bordered table-striped">
<thead>
	<tr>
		<th>{{labels.Action}}</th>
		<th>{{labels.Category}}</th>
		<th>{{labels.Parent}}</th>
		<th>{{labels.Description}}</th>
		<th>{{labels.ImageFile}}</th>
	<tr>
</thead>

<tbody>
{{#items}}
<tr>
	<td>
		<a title="Edit {{title}}" href="{{baseUrl}}/category/edit/{{id}}"><i class="glyphicon glyphicon-edit"></i> </a>
		<a title="Delete {{title}}" href="{{baseUrl}}/category/remove/{{id}}"><i class="glyphicon glyphicon-remove"></i> </a>

	</td>
	<td><a title="Edit this category" href="{{baseUrl}}/category/edit/{{id}}">{{title}}</a></td>
	<td>{{#hasParent}} {{parent.title}}{{/hasParent}}</td>
	<td>{{description}}</td>
	<td>{{img_file}}</td>
</tr>
{{/items}}
</tbody>
</table>
