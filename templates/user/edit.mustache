{{> edit/header}}

<form class="form-horizontal" role="form" name="{{formName}}" method="post" action="">
  {{> form/header}}
  <div class="form-group">
    <label for="inputUserName" class="col-sm-3 control-label">{{labels.username}} *</span></label>
    <div class="col-sm-5">
      <input type="text" class="form-control" name="username" id="inputUserName" placeholder="username" value={{model.username}}>
    </div>
  </div>
  
